<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="icon" type="image/png" href="/images/.favicon.ico">
		<meta name="viewport" content="width=device-width" initial-scale=1>
		<title>Catalyst Hub - jobs</title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
		<link href="/css/main.css" rel="stylesheet">
	</head>
	<body>
		<!--columns container--><div class="sidebar-main-parent">
			<!--column 1--><div id="sidebar" class="sidebar"></div><!--column 1-->
			<!--column 2--><div class="main-window">
				<!--search controls-->
				<form class="row g-3" name="jobs" action="/jobs/search"
				  enctype="application/x-www-form-urlencoded"  method="GET">

					<h1 class="h3 mb-3 fw-normal">Good luck in your search</h1>
					
					<!--begin row 1--><div class="col-md-6 form-floating">
						<input class="form-control" name="jobTitle" type="text" id="jt">
						<label for="jt">title</label>
					</div>
					<div class="col-md-6 form-floating">
						<input class="form-control" name="jobLocation" type="text" id="jl">
						<label for="jl">location</label>
					<!--end row 1--></div>

					<!--begin row 2--><div class="col-md-4 form-floating">
						<input class="form-control" name="jobPayMin" type="number" id="jpmi">
						<label for="jpmi">pay min</label>
					</div>
					<div class="col-md-4 form-floating">
						<input class="form-control" name="jobPayMax" type="number" id="jpma">
						<label for="jpma">pay max</label>	
					</div>
					<div class="col-md-4 form-floating">
						<select class="form-control" name="jobPayPer" id="jpp" required>
							<option value="">Select</option>
							<option value="hour">Hour</option>
							<option value="year">Year</option>
						</select>
						<label for="jpp">pay per</label>
					<!--end row 2--></div>

					<!--begin row 3--><fieldset class="col-md-5 form-floating">
						<div>
							<input type="radio" id="or" name="searchCriterica" value="any" checked>
							<label for="or">Search for ANY criteria</label>
						</div>
						<div>
							<input type="radio" id="and" name="searchCriterica" value="all">
							<label for="and">Search for ALL criteria</label>
						</div>
					</fieldset>
					<!--TODO: unhardcode itemsPerPage, requestedPageNumber, searchOrder -->

					<!-- <button class="col-md-3 btn btn-outline-secondary btn-lg px-4" type="submit"
					  id="ss">Search</button> -->
					
					<input  class="col-md-3 btn btn-outline-secondary btn-lg px-4" type="submit"
						id="searchSubmit" value="Search">

					<!--end row 3--><div class="col-md-4 form-floating"></div>
				</form>
				<br>
				<!--display-->
				<div class="album py-5 lfxWhiteDiv">
					<div class="container">
						<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
							<% if ( locals.jobs ) { %>
								<% jobs.map((job, arrayIndex) => { %>
									<div class="col">
										<div class="card shadow-sm">
											<div class="card-body">
												<p class="card-text">
													<h3><%=job.title %></h3>
													<p><%=job.company %>
														<%=job.city %>
													</p>
													<!--<a href="/jobs/<%=job._id%>" class="btn-oval">Learn More</a><br><br>-->
												</p>

												<div class="d-flex justify-content-between align-items-center">
													<div class="btn-group">
														<a href="/jobs/<%=job._id%>">
															<!--
																<button type="button" class="btn btn-sm btn-outline-secondary">
																	Learn More
																</button>
															-->
															<button class="btn btn-sm btn-outline-secondary btn-lg px-4" type="button">
																Details
															</button>
														</a>
													</div>
													<!--<small class="text-muted">9 mins</small>-->
												</div>
											</div>
										</div>
									</div>
								<% }) %>
							<% } %>
						</div>
					</div>
				</div>
			<!--column 2--></div>
		<!--column container--></div>
		
		
		<script src="/js/validateFormData.js" type="text/javascript"></script>

		<script src="/js/jquery.3.6.0.min.js" type="text/javascript"></script>
		<script src="/js/loadSidebar.js" type="text/javascript"></script> 
		<script src="/js/bootstrap.bundle.min.js" type="text/javascript"></script>
	</body>
</html>


		

